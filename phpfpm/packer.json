{
  "builders": [
    {
      "type": "docker",
      "image": "rc/base",
      "commit": true,
      "pull": false
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "setup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "rc/phpfpm",
      "force": true
    },
    [
      {
        "type": "docker-tag",
        "repository": "rococo.io:5000/rc/phpfpm",
        "force": true
      },
      "docker-push"
    ]
  ]
}
